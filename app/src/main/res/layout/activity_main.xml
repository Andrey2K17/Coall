<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/providerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/nameProviders"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/providerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="8dp"
        android:hint="@string/nameProvider"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/providerButton"
        app:layout_constraintTop_toTopOf="@id/providerButton"
        app:layout_constraintBaseline_toBaselineOf="@id/providerButton"
        />

    <Button
        android:id="@+id/markButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/nameMarks"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/providerButton"/>

    <TextView
        android:id="@+id/markName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="fill_horizontal"
        android:hint="@string/nameMarks"
        android:maxLines="2"
        app:layout_constraintBaseline_toBaselineOf="@id/markButton"
        app:layout_constraintLeft_toRightOf="@id/markButton"
        app:layout_constraintLeft_toLeftOf="@id/providerName"
        app:layout_constraintTop_toBottomOf="@id/providerName" />



</android.support.constraint.ConstraintLayout>